@page
@model web_api.Pages.ProductCategory.addModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>add</title>
</head>

<environment include="Development">
    <link rel="stylesheet" href="~/lib/bootstrap.min.css" />
</environment>

<body style="margin: 0 auto; width:90%">

<div>
    <br />
</div>

<h4 style="text-decoration:underline;">Create Product Category</h4>
<a style="float:right; margin-right:25px;" asp-page="ProductCategory/index">Back to List</a>
<hr />
<div class="row" style="margin: 0 auto; width:80%">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductCategory.CategoryName" class="control-label"></label>
                <input asp-for="ProductCategory.CategoryName" class="form-control" />
                <span asp-validation-for="ProductCategory.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategory.CategoryDescription" class="control-label"></label>
                <input asp-for="ProductCategory.CategoryDescription" class="form-control" />
                <span asp-validation-for="ProductCategory.CategoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
