@page
@model web_api.Pages.ProductCategory.updateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>update</title>
</head>

<environment include="Development">
    <link rel="stylesheet" href="~/lib/bootstrap.min.css" />
</environment>

<body style="margin:0 auto; width:90%">
<div>
    <br/>
</div>

<div style="margin:0 auto; width:85%"></div>

<p style="float:right; margin-right:30px; top:-50px;">
    <a asp-page="./Index">Category List</a>
</p>

<h5>Product Category Details</h5>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductCategory.CategoryId" />
            <div class="form-group">
                <label asp-for="ProductCategory.CategoryName" class="control-label"></label>
                <input asp-for="ProductCategory.CategoryName" class="form-control" />
                <span asp-validation-for="ProductCategory.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategory.CategoryDescription" class="control-label"></label>
                <input asp-for="ProductCategory.CategoryDescription" class="form-control" />
                <span asp-validation-for="ProductCategory.CategoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
